@page "/SecondPage"
@inject IJSRuntime jsruntime;

<h1>SecondPage</h1>

<h4>Numero estudiantes</h4>
<div hide="@numEstudiantes" id="chart_div" class="chartdiv"></div>
<button @onclick="()=>numEstudiantes=!numEstudiantes">Hide</button>
<h4>Regiones de las que proceden los investigadores</h4>
<div hide="@regions" id="regions_div" class="chartdiv"></div>
<button @onclick="()=>regions=!regions">Hide</button>

<h4>Combo</h4>
<div hide="@regions" id="googleCombo" class="chartdiv"></div>
<button @onclick="()=>combo=!combo">Hide</button>


@code {
    public bool numEstudiantes = false;
    public bool regions = false;
    public bool combo = false;

    protected override async Task OnAfterRenderAsync(bool firstRender) {
        await jsruntime.InvokeVoidAsync("googleCharts");
        await jsruntime.InvokeVoidAsync("GoogleRegions");
        await jsruntime.InvokeVoidAsync("GoogleComboChart");
    }
}
